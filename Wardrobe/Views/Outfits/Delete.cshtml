@model Wardrobe.Models.Outfit

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Outfit</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Top:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Top.Name)
        </dd>

        <dt>
            Bottom:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Bottom.Name)
        </dd>

        <dt>
            Shoe:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Shoe.Name)
        </dd>

        <dt>
            Accessories:
        </dt>

        <dd>
            @foreach (var accessory in Model.Accessory)
            {
                <div>@Html.DisplayFor(modelItem => accessory.Name)</div>
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
